// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TradeType {
  LONG
  SHORT
}

model User {
  id               String    @id @default(uuid())
  firstName        String    @map("first_name")
  lastName         String    @map("last_name")
  userName         String    @map("username")
  email            String    @unique
  authToken        String?   @map("auth_token")
  authTokenExpires DateTime? @map("auth_token_expires")

  // relations
  trades Trade[]

  // timestamps
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("users")
}

model Trade {
  id            String    @id @default(uuid())
  type          TradeType
  baseCurrency  String    @map("base_currency")
  quoteCurrency String    @map("quote_currency")
  notes         String?
  entry_price   Float     @map("entry_price")
  exit_price    Float     @map("exit_price")
  entry_date    DateTime  @map("entry_date")
  exit_date     DateTime? @map("exit_date")
  quantity      Float

  // relations
  traderId String @map("trader_id")
  trader   User   @relation(fields: [traderId], references: [id])

  // timestamps
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
}
